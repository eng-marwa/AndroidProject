<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AndroidProject" parent="Base.Theme.AndroidProject" />

    <style name="TitleStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="MovieTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="RatingTitleStyle">
        <item name="android:textColor">@color/ratingColor</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>

    </style>

    <style name="TagStyle">
        <item name="android:background">@drawable/tag_bg</item>
        <item name="android:textColor">@color/tagTextColor</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_4sdp</item>

    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>